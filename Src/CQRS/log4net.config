<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <root>
    <level value="ALL" />
    <appender-ref ref="Monitoring" />
    <appender-ref ref="Console" />
    <appender-ref ref="Log" />
  </root>
  <appender name="Console" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %-5level: %message%newline" />
    </layout>
  </appender>
  <appender name="Log" type="log4net.Appender.FileAppender">
    <file type="log4net.Util.PatternString">
      <conversionPattern value="C:\Temp\Log_%date{yyyy-MM-dd}-SeLoger.WebApi.log" />
    </file>
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %-5level[%logger]: %message%newline" />
    </layout>
  </appender>
  <appender name="Monitoring" type="log4net.Appender.FileAppender">
    <file type="log4net.Util.PatternString">
      <conversionPattern value="C:\Temp\Monitoring_%date{yyyy-MM-dd}-SeLoger.WebApi.log" />
    </file>
    <appendToFile value="true" />
    <layout type="SeLoger.Framework.Standard.Log4NetExtensions.JSonLayout, SeLoger.Framework.Standard.Log4NetExtensions">
      <job value="SeLoger.WebApi" />
    </layout>
  </appender>
</log4net>